[Unit]
Description=Patroni service
After=network-online.target
Wants=network-online.target

[Service]
User=postgres
Group=postgres
Type=simple
ExecStart=/opt/patroni/bin/patroni {{ patroni_conf_dir }}/patroni.yml
Restart=always
RestartSec=5
LimitNOFILE=65536
TimeoutStopSec=30

[Install]
WantedBy=multi-user.target
